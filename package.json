{
	"name": "swagger-explorer",
	"author": {
		"name": "ganori80"
	},
	"publisher": "ganori80",
	"displayName": "Swagger Explorer",
	"description": "Swagger explorer for Visual Studio Code",
	"main": "./out/extension.js",
	"module": "./out/index.js",
	"esnext": "./out/index.js",
	"types": "./out/index.d.ts",
	"icon": "out/media/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/dardino/vscode-swagger-explorer.git",
		"directory": "extension"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "swaggerExplorerContainer",
					"title": "Swagger Explorer",
					"icon": "out/media/logo.svg"
				}
			]
		},
		"views": {
			"swaggerExplorerContainer": [
				{
					"id": "swaggerExplorer",
					"name": "Swagger Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "swaggerExplorer.refresh",
				"title": "Refresh",
				"icon": {
					"light": "out/media/light/refresh.svg",
					"dark": "out/media/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "swaggerExplorer.refresh",
					"when": "view == swaggerExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "swaggerExplorer.refresh",
					"when": "view == swaggerExplorer && viewItem == swaggerExplorerUrl",
					"group": "inline"
				},
				{
					"command": "swaggerExplorer.refresh",
					"when": "view == swaggerExplorer && viewItem == swaggerExplorerDoc || viewItem == swaggerExplorerSection",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Swagger Explorer",
			"properties": {
				"swaggerExplorer.configFilePattern": {
					"type": "string",
					"description": "Config filename pattern",
					"default": "**/swaggerexplorer.config.json"
				},
				"swaggerExplorer.httpTimeout": {
					"type": "number",
					"description": "Remote http call Timeout in milliseconds",
					"default": 20000
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"chalk": "^3.0.0",
		"openapi-types": "^1.3.5",
		"swagger-parser": "^8.0.3",
		"swagger2openapi": "^5.3.1",
		"axios": "^0.19.0",
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/chalk": "^2.2.0",
		"@types/lodash": "^4.14.149",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.14",
		"tslint": "^5.20.1",
		"typescript": "^3.7.3",
		"vscode": "^1.1.36"
	},
	"__metadata": {
		"id": "772fc9ba-e875-41a2-9469-a9d48cb9099f",
		"publisherDisplayName": "ganori80",
		"publisherId": "a8774ec0-d1d4-41eb-b1cc-27899e8cd577"
	}
}